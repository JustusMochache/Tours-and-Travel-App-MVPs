<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sampertravelntoursapp.LoginActivity">

    <LinearLayout
        android:id="@+id/linearLayout"

        android:layout_width="420dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:padding="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_above="@+id/linearLayout"-->
<!--            android:layout_centerHorizontal="true"-->
<!--            android:layout_marginLeft="150dp"-->
<!--            android:layout_marginTop="100dp"-->
<!--            android:text="Login"-->
<!--            android:textColor="@color/colorPrimary"-->
<!--            android:textSize="20dp"-->
<!--            android:textStyle="bold" />-->

        <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:src="@drawable/car"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="100dp"/>

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="294dp"
            android:layout_height="63dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/butcolor"
            android:ems="10"
            android:fontFamily="serif"
            android:hint="Enter phone Number"
            android:inputType="textEmailAddress"
            android:textAlignment="center"

            android:textSize="15sp"

            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="67dp"
            tools:layout_editor_absoluteY="180dp" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="291dp"
            android:layout_height="59dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/butcolor"
            android:ems="10"
            android:fontFamily="serif"
            android:hint="passwrord/pin"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textSize="15sp"

            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="67dp"
            tools:layout_editor_absoluteY="284dp" />

        <Button
            android:id="@+id/buttonSignIn"
            android:layout_width="100dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:background="@drawable/realbutton"
            android:padding="10dp"
            android:text="Log in"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"

            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="155dp"
            tools:layout_editor_absoluteY="410dp" />

        <TextView
            android:id="@+id/textViewSignup"
            android:layout_width="301dp"
            android:layout_height="53dp"

            android:padding="20px"
            android:text="Not have an account? Signup Here"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="17sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="100dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="553dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>



